{
  "paper_trading": {
    "data_dir": "data/paper_trading",
    "initial_balance": {
      "USDT": 10000.0,
      "IRT": 5000000.0,
      "BTC": 0.1,
      "ETH": 1.0
    },
    "log_level": "INFO"
  },
  "market_data": {
    "providers": ["nobitex_websocket", "tradingview"],
    "update_interval": 1.0,
    "cache_size": 1000,
    "symbols": ["btc-usdt", "eth-usdt", "ltc-usdt", "eth-btc", "btc-irt", "eth-irt"]
  },
  "nobitex_websocket": {
    "websocket_url": "wss://api.nobitex.ir/ws",
    "api_key": "${NOBITEX_API_KEY}",
    "reconnect_interval": 5,
    "ping_interval": 30,
    "channels": ["trades", "orderbook", "ticker"],
    "symbols": ["btc-usdt", "eth-usdt", "ltc-usdt", "btc-irt", "eth-irt"]
  },
  "tradingview": {
    "webhook_secret": "${TRADINGVIEW_WEBHOOK_SECRET}",
    "webhook_port": 5001,
    "webhook_path": "/tradingview-webhook",
    "validation": {
      "required_fields": ["symbol", "strategy", "action"],
      "allowed_strategies": ["RSI_Strategy", "MACD_Strategy", "Simple_MA_Cross"],
      "allowed_actions": ["buy", "sell", "close", "alert"]
    }
  },
  "time_series_db": {
    "type": "influxdb",
    "connection": {
      "url": "http://localhost:8086",
      "token": "${INFLUXDB_TOKEN}",
      "org": "trading_system",
      "bucket": "paper_trading"
    },
    "fallback_mode": "csv",
    "fallback_dir": "data/paper_trading/market_data"
  },
  "strategy": {
    "enabled_strategies": ["RSI_Strategy", "MACD_Strategy"],
    "RSI_Strategy": {
      "timeframes": ["1h", "4h"],
      "symbols": ["btc-usdt", "eth-usdt"],
      "parameters": {
        "rsi_period": 14,
        "overbought": 70,
        "oversold": 30
      }
    },
    "MACD_Strategy": {
      "timeframes": ["1h", "4h"],
      "symbols": ["btc-usdt", "eth-usdt"],
      "parameters": {
        "fast_period": 12,
        "slow_period": 26,
        "signal_period": 9
      }
    },
    "backtest": {
      "start_date": "2023-01-01",
      "end_date": "2023-12-31",
      "initial_balance": 10000.0
    }
  },
  "execution": {
    "paper_trading": true,
    "simulation": {
      "min_execution_delay_ms": 50,
      "max_execution_delay_ms": 500,
      "partial_fill_probability": 0.2,
      "rejection_probability": 0.02,
      "slippage_range": [-0.001, 0.001],
      "commission_rate": 0.001
    }
  },
  "position": {
    "data_dir": "data/paper_trading/positions",
    "db_type": "sqlite",
    "db_path": "data/paper_trading/positions.db",
    "reconciliation_interval": 3600,
    "position_sizing": {
      "default_size_pct": 0.05,
      "max_position_pct": 0.2,
      "max_single_order_pct": 0.1
    }
  },
  "risk": {
    "max_drawdown_pct": 0.15,
    "max_daily_trades": 10,
    "max_open_positions": 5,
    "stop_loss": {
      "default_pct": 0.05,
      "trailing_pct": 0.03
    },
    "position_limits": {
      "btc-usdt": 0.5,
      "eth-usdt": 5.0,
      "btc-irt": 0.3,
      "eth-irt": 3.0
    },
    "exposure_limits": {
      "per_symbol_pct": 0.2,
      "total_pct": 0.8
    }
  },
  "alerts": {
    "enabled": true,
    "email": {
      "enabled": false,
      "smtp_server": "smtp.example.com",
      "smtp_port": 587,
      "sender": "alerts@example.com",
      "recipients": ["user@example.com"]
    },
    "telegram": {
      "enabled": false,
      "bot_token": "${TELEGRAM_BOT_TOKEN}",
      "chat_id": "${TELEGRAM_CHAT_ID}"
    },
    "slack": {
      "enabled": false,
      "webhook_url": "${SLACK_WEBHOOK_URL}"
    },
    "alert_levels": {
      "error": true,
      "warning": true,
      "info": false
    }
  },
  "logging": {
    "file": {
      "path": "logs/paper_trading.log",
      "level": "INFO",
      "max_size": 10485760,
      "backup_count": 5
    },
    "console": {
      "level": "INFO",
      "format": "%(asctime)s [%(levelname)s] [%(name)s] %(message)s"
    },
    "performance": {
      "enabled": true,
      "interval": 300
    }
  },
  "message_bus": {
    "type": "in_memory",
    "redis": {
      "host": "localhost",
      "port": 6379,
      "db": 0,
      "password": null
    }
  },
  "monitoring": {
    "enabled": true,
    "interval": 60,
    "components": {
      "market_data": true,
      "strategy": true,
      "execution": true,
      "position": true,
      "risk": true
    },
    "metrics": {
      "enabled": true,
      "prometheus": {
        "port": 9090
      }
    },
    "health_check": {
      "port": 8080,
      "path": "/health"
    }
  }
} 